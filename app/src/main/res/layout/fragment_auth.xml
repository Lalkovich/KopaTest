<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="120dp"
        android:contentDescription="@null"
        android:src="@drawable/kopa_logo" />

    <TextView
        android:id="@+id/btn_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:background="@drawable/btn_auth"
        android:contentDescription="@null"
        android:gravity="center"
        android:text="@string/btn_auth_text"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:backgroundTint="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/phone_auth"
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="250dp"
        android:background="@drawable/btn_shape"
        android:backgroundTint="#42FF00"
        android:contentDescription="@null"
        android:src="@drawable/phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/facebook_auth"
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:layout_marginTop="600dp"
        android:background="@drawable/btn_shape"
        android:backgroundTint="#44429B"
        android:contentDescription="@null"
        android:src="@drawable/fbook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/google_auth"
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="600dp"
        android:background="@drawable/btn_shape"
        android:backgroundTint="#FF0000"
        android:contentDescription="@null"
        android:src="@drawable/google"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>